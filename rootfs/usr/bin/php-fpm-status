#!/bin/sh

set -e

query='fromjson? | with_entries(.key |= gsub(" "; "_"))'
if [ -n "${1:-}" ]; then
    query="$query | .[\$key]"
fi

SCRIPT_NAME=/status \
    SCRIPT_FILENAME=/status \
    REQUEST_METHOD=GET \
    QUERY_STRING=json \
    cgi-fcgi -bind -connect 127.0.0.1:9000 \
    | jq -Rrc --arg key "${1:-}" "$query"
